#character-modal{:class => "#{modal_css_class}", :tabindex => '-1',
                 :role => 'dialog', :'aria-hidden' => 'true'}
  .modal-body
    #character-modal-right-pane{:class => 'right-pane'}
      #character-modal-right-pane-inner
        #character-modal-right-pane-inner-right-pane{:class => 'right-pane'}
          %form#character-modal-costume-form{:class => 'form-horizontal'}
            .control-group{for: "costume[name]"}
              %label.control-label{for: "costume_name"}<
                = t('.costume_name')
              .controls
                %input#costume_name.input-large{name: "costume[name]", type: "text", placeholder: t('.msg_input_costume_name')}

          #character-modal-costume-selector

        #character-modal-right-pane-inner-left-pane{:class => 'left-pane'}
          #character-modal-costume-set-header
            = t('.costumes')
          #character-modal-costume-set-container
            #character-modal-costume-set
            #character-modal-add-costume.item
              %a#character-modal-add-costume-button.costume
                %i.icon-plus-sign-alt
                %br
                = t('.new_costume')

    #character-modal-left-pane{:class => 'left-pane'}
      #character-modal-preview
        #character-modal-character
          %img{:src => "/smalruby/assets/car1.png"}

      #character-modal-attributes
        %form#character-modal-form{:class => 'form-horizontal'}
          .control-group{:for => "character[name]"}
            %label.control-label{:for => 'character_name'}<
              = t('.name')
            .controls
              %input#character_name{:name => 'character[name]', :type => 'text', :placeholder => t('.msg_input_name'), :class => 'input-large'}
          .control-group
            %label.control-label{:for => 'character_x'}<
              = t('.x_position')
            .controls
              %input#character_x{:name => 'character[x]', :type => 'range', :min => '0', :max => '639', :class => 'input-large'}
              %span#character_x_value{:class => 'character_value'}
                300
          .control-group
            %label.control-label{:for => 'character_y'}<
              = t('.y_position')
            .controls
              %input#character_y{:name => 'character[y]', :type => 'range', :min => '0', :max => '439', :class => 'input-large'}
              %span#character_y_value{:class => 'character_value'}
                200
          .control-group
            %label.control-label{:for => 'character_angle'}<
              = t('.direction')
            .controls
              #character_rotation_style.btn-group
                %button#character_rotation_style_free.btn{type: "button", class: "btn-small", value: "free"}<
                  %i.icon-repeat
                %button#character_rotation_style_left_right.btn{type: "button", class: "btn-small", value: "left_right"}<
                  %i.icon-resize-horizontal
                %button#character_rotation_style_none.btn{type: "button", class: "btn-small", value: "none"}<
                  %i.icon-arrow-right
              %input#character_angle{:name => 'character[angle]', :type => 'range', :min => '0', :max => '359', :class => 'input-small', style: "margin-left: 4px;"}
              %span#character_angle_vector{:class => 'character_value'}
                →
              %span#character_angle_value{:class => 'character_value', style: "margin-left: 4px;"}
                100°

  .modal-footer
    %button.btn{:'data-dismiss' => 'modal', :'aria-hidden' => 'true'}<
      %i.icon-remove
      = t('common.cancel')
    %button#character-modal-ok-button{:class => 'btn btn-primary'}<
      %i.icon-circle-blank
      = t('common.ok')

%script#character-modal-costume-template{:type => 'text/template'}
  .item
    .item-info
      .name
        {{- name }}
      .attributes
        {{- index }}

      %a.remove-button
        %i.icon-remove

    %a.costume
      %img{src: '{{- path }}', alt: '{{- basename }}'}
